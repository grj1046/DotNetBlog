@page "Blog/Post/{p}"

@model PostModel
@{
    ViewData["Title"] = "Post";
}
<div>
    <h3 class="postTitle">@this.Model.Post.Title</h3>
    @switch (this.Model.Post.EditorType)
    {
        case EditorType.Text:
            <div class="postContent">@this.Model.Post.Content</div>
            break;
        case EditorType.Html:
            <div class="postContent">@Html.Raw(this.Model.Post.Content)</div>
            break;
        case EditorType.Markdown:
            <div class="postContent">@this.Model.Post.Content</div>
            break;
        default:
            break;
    }
    <hr />
    <div class="blogComments">
        <div class="panel">
            <div class="panel-heading">Comments (<span id="commentCount"></span>)</div>
            <div class="panel-body">
                <div class="panelList" id="postComments">
                </div>
                <div class="panelCommentForm">
                    <form id="formComment" asp-page="AddComment" asp-route-PostID="@this.Model.Post.PostID" asp-route-ContentID="@this.Model.Post.ContentID" method="post" autocomplete="off" novalidate="novalidate">

                        @if (!this.User.Identity.IsAuthenticated)
                        {
                            <div class="form-group">
                                <label for="userEmail" class="control-label">Email</label>
                                <input type="text" id="userEmail" name="userEmail" class="form-control" />
                            </div>
                        }
                        <div class="form-group">
                            <label for="userName" class="control-label">your name</label>
                            @if (this.User.Identity.IsAuthenticated)
                            {
                                <input type="text" disabled="disabled" value="@this.User.Identity.Name" class="form-control" />
                            }
                            else
                            {
                                <input type="text" id="userName" name="userName" class="form-control" />
                            }
                        </div>
                        <div class="form-group">
                            <textarea id="comment" name="comment" style="height:100px;padding:10px; width: 98%; margin: 1%;" class="form-control"></textarea>
                        </div>
                        <div class="form-group" style="text-align:right;">
                            <input id="parentCommentID" name="parentCommentID" type="hidden" value="@Guid.Empty" />
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    @switch (this.Model.Post.EditorType)
    {
        case EditorType.Text:
            break;
        case EditorType.Html:
            @*<link rel="stylesheet" href="~/lib/wangEditor/release/wangEditor.css" asp-append-version="true" />*@
            break;
        case EditorType.Markdown:
            @*<link rel="stylesheet" href="~/thinker-md/stylesheets/thinker-md.vendor.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/thinker-md/emoji/nature.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/thinker-md/emoji/object.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/thinker-md/emoji/people.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/thinker-md/emoji/place.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/thinker-md/emoji/Sysmbols.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/thinker-md/emoji/twemoji.css" asp-append-version="true" />*@
            break;
        default:
            break;
    }
}

@section Scripts {
    @switch (this.Model.Post.EditorType)
    {
        case EditorType.Text:
            break;
        case EditorType.Html:
            break;
        case EditorType.Markdown:
            @*<script src="~/thinker-md/javascripts/thinker-md.vendor.min.js" charset="utf-8" asp-append-version="true"></script>*@
            <script type="text/javascript">
                //$(".postContent").html(marked($(".postContent").html()));
                $(".postContent").html($(".postContent").html());
            </script>
            break;
        default:
            break;
    }

    <script src="~/lib/jquery.form/jquery.form.min.js" charset="utf-8" asp-append-version="true"></script>
    <script type="text/javascript">
        $(function () {
            $("#formComment").ajaxForm(function (data, status) {
                if (status != 'success') {
                    //has some error
                    return;
                }
                $("#postComments ul").append(data);
                $("#commentCount").text($("#postComments ul li").length);
                $("#comment").val("");
                //$("#formComment").ajaxSubmit();
            });
            //load comments
            $.get("GetComments/@this.Model.Post.PostID/@this.Model.Post.ContentID", function (data) {
                $("#postComments").html(data);
                $("#commentCount").text($("#postComments ul li").length);
            });
        });
        function replayComment(commentID) {
            $("#parentCommentID").val(commentID);
            document.getElementById("comment").focus();
        }
    </script>
}