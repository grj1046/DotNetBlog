@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>@ViewData["Title"]</h2>
<article>
    <form method="post" autocomplete="off" novalidate="novalidate">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Title"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div style="display:flex;">
                <label asp-for="Input.Content" style="flex:3; align-self:flex-end;"></label>
                <div style="text-align:right; flex:1;">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button"
                                id="editorOptions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            @this.Model.Input.EditorType
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="editorOptions" style="left:auto;right:0;z-index:10001;">
                            @foreach (var item in Enum.GetNames(typeof(EditorType)))
                            {
                                @if (this.Model.Input.EditorType.ToString() != item)
                                {
                                    <li><a asp-page-handler="ChangeEditor" asp-route-editorType="@item" onclick="return changeEditorConfirm();">@item</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            @if (this.Model.Input.EditorType == EditorType.Html)
            {
                <div id="textEditor" style="margin-top: 5px;"></div>
            }
            <textarea asp-for="Input.Content" rows="20" class="form-control"></textarea>
            <span asp-validation-for="Input.Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Input.PostID" />
            <input type="hidden" asp-for="Input.EditorType" />
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</article>

@section Styles {
    @switch (Model.Input.EditorType)
    {
        case EditorType.Text:
            <style type="text/css">
                #Input_Content {
                    margin-top: 5px;
                }
            </style>
            break;
        case EditorType.Html:
            break;
        case EditorType.Markdown:
            <link rel="stylesheet" href="~/thinker-md/stylesheets/thinker-md.user.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/stylesheets/thinker-md.vendor.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/emoji/nature.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/emoji/object.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/emoji/people.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/emoji/place.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/emoji/Sysmbols.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/thinker-md/emoji/twemoji.css" asp-append-version="true" />
            <style type="text/css">
                .body-content {
                    margin-top: 20px;
                }
            </style>
            break;
        default:
            break;
    }
}

@section Scripts {
    @switch (Model.Input.EditorType)
    {
        case EditorType.Text:
            break;
        case EditorType.Html:
            <script src="~/lib/wangEditor/release/wangEditor.min.js" charset="utf-8" asp-append-version="true"></script>
            <script type="text/javascript">
                var editor = new window.wangEditor('#textEditor');
                var $content = $('#Input_Content');
                editor.customConfig.onchange = function (html) {
                    // 监控变化，同步更新到 textarea
                    $content.val(html)
                };
                editor.create();
                // 初始化 textarea 的值
                $content.val(editor.txt.html());
                $content.hide();
            </script>
            break;
        case EditorType.Markdown:
            <environment>
                <script src="~/thinker-md/javascripts/thinker-md.vendor.min.js" charset="utf-8" asp-append-version="true"></script>
            </environment>
            <script type="text/javascript">
                $("textarea").markdown({
                    language: 'zh',
                    fullscreen: {
                        enable: true
                    },
                    resize: 'vertical',
                    localStorage: 'md',
                    imgurl: '/c/imgUpload',
                    base64url: '/c/imgUpload',
                    flowChart: true
                });
            </script>
            break;
        default:
            break;
    }
    <script type="text/javascript">
                function changeEditorConfirm() {
                    var currVal = $("#Input_Content").val();
                    if (currVal == "<p><br></p>")
                        currVal = '';
                    if (currVal) {
                        return confirm("change editor will lost your content, do you want continue?");
                    }
                };
    </script>
}
