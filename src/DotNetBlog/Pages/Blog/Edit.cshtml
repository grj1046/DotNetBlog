@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>@ViewData["Title"]</h2>
<article>
    <form method="post" autocomplete="off" novalidate="novalidate">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Title"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Content"></label>
            <textarea asp-for="Input.Content" rows="50" class="form-control"></textarea>
            <span asp-validation-for="Input.Content"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Input.PostID" />
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</article>