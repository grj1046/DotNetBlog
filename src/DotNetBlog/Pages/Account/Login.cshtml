@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container" style="display:flex; justify-content:flex-start; align-items:center; flex-direction:column;">
    <div style="height:200px;"></div>
    <div style="width:300px; border:1px solid #eaeaea;padding:0 30px;">
        <h2>@ViewData["Title"]</h2>
        <form method="post" autocomplete="off" novalidate="novalidate" onsubmit="cmdEncrypt();">
            <div asp-validation-summary="All" class="text-danger"></div>
            <p>
                <label asp-for="Input.Email" class="input_label">
                    Email(<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" title="Register as a new user" style="font-size:smaller;">Register</a>)
                </label>
                <input asp-for="Input.Email" autofocus class="input_text" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </p>
            <p>
                <label asp-for="Input.Password" class="input_label">
                    Password(<a asp-page="./ForgotPassword" title="reset your password" style="font-size:smaller;">Forgot?</a>)
                </label>
                <input asp-for="Input.Password" class="input_text" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </p>
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
            <p>
                <button type="submit" class="login_button">Log in</button>
            </p>
            <div>
                <p></p>
            </div>
        </form>
    </div>
</div>

@section Styles{
    <style type="text/css">
        .input_label {
            display: block;
            max-width: 100%;
            margin-bottom: 5px;
            font-size: 14px;
            line-height: 1.42857143;
        }

        .input_text {
            padding: 4px 2px;
            width: 220px;
            vertical-align: middle;
        }

        .login_button {
            border: 0;
            border-radius: 2px;
            box-sizing: border-box;
            cursor: pointer;
            font-size: .875em;
            margin: 0;
            padding: 10px 24px;
            transition: box-shadow 200ms cubic-bezier(0.4, 0, 0.2, 1);
            user-select: none;
        }

            .login_button:hover {
                background-color: #eaeaea;
            }
    </style>
}

@section Scripts {

    <environment include="Development">
        <script src="~/js/jsencrypt.min.js"></script>
        <script src="~/js/jsrsa.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/jsencrypt.min.js" asp-append-version="true"></script>
        <script src="~/js/jsrsa.js" asp-append-version="true"></script>
    </environment>
    <script type="text/javascript">
        function cmdEncrypt() {
            var hashedData = rsaEncrypt($("#Input_Password").val());
            $("#Input_Password").val(hashedData);
        }
    </script>

}
